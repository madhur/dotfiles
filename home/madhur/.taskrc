# Define the report
report.upcoming2.description=Overdue and tasks due in next 2 days
report.upcoming2.columns=id,description,due.relative
report.upcoming2.labels=id,Description,Due
report.upcoming2.filter=status:pending  due.before:2days
report.upcoming2.sort=due+



report.nonrecur.description=Non-recurring tasks
report.nonrecur.columns=description,due.relative
report.nonrecur.labels=Description,Due
report.nonrecur.filter=status:pending -RECURRING -PARENT -CHILD +work due.any:
report.nonrecur.sort=due+

column.description.width=120

report.nodue.description=Tasks with no due date
report.nodue.columns=description
report.nodue.labels=Description
report.nodue.filter=status:pending due: +work
report.nodue.sort=entry+

report.home.description=Tasks with no due date
report.home.columns=id,description,due.relative
report.home.labels=id,Description,Due
report.home.filter=status:pending +home
report.home.sort=due+



#summary.all.enabled=no
#verbose=blank,label
verbose=nothing

recurrence.limit=1
rc.confirmation=yes
report.ls.columns=id,start.active,depends.indicator,project,tags,recur.indicator,wait.remaining,scheduled.countdown,due.relative,until.countdown,description.count
