#
# wm independent hotkeys
#

# terminal emulator
super + Return
    kitty

super + grave
    /home/madhur/scripts/tdrop.sh

#calculator
super + c
    /home/madhur/scripts/start_calc.sh

# program launcher
super + shift + d
    /home/madhur/scripts/old_launcher.sh


# program launcher
super + d
    /home/madhur/scripts/launcher.sh

super + b
     /home/madhur/scripts/rofi-bluetoth/rofi-bluetooth

super  + s
    eww open bindkeys --toggle

super + shift + s
    eww open bindkeys_nvim --toggle 

#new power menu
super + x
    key-power

# Do brightness
XF86MonBrightness{Up,Down}
    brightness{ --up, --down}

# run flameshot
super + F12
    /home/madhur/scripts/flameshot.sh

super + F11
    /home/madhur/.config/rofi/applets/bin/screenshot.sh

super + F3
    /home/madhur/scripts/codebrowser.sh

super + F4
    /home/madhur/scripts/homebrowser.sh


