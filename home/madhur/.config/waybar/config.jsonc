{
  "position": "top",
  "layer": "top",
  "height": 30,
  "margin-top": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "margin-right": 0,
  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "cpu",
    "custom/temperature",
    "memory",
    "disk",
    "network",
    "custom/uptime",
    "pulseaudio",
    "tray",
