      "3": [
        "DP-2"
      ],
      "4": [
        "DP-2"
      ],
      "5": [
        "DP-2"
      ],
      "6": [
        "DP-1"
      ],
      "7": [
        "DP-1"
      ],
      "8": [
        "DP-1"
      ],
      "9": [
        "DP-1"
      ],
