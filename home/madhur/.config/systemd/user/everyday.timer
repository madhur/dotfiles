[Unit]
Description=Run unit every day
#Requires=everyday.service     #Uncommenting this will trigger the service at boot

[Timer]
#OnBootSec=15min
Persistent=true
#OnCalendar=daily #Runs at 12am every day
OnCalendar=*-*-* 20:00:00
#OnUnitActiveSec=1d
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
